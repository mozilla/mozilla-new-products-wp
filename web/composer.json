{
  "name": "upstatement/mozilla-new-products",
  "version": "0.0.2",
  "authors": [
    {
      "name": "Upstatement",
      "email": "tech@upstatement.com"
    }
  ],
  "description": "Theme for Mozilla Labs",
  "license": "proprietary",
  "repositories": {
    "my-yoast": {
      "type": "composer",
      "url": "https://my.yoast.com/packages/"
    },
    "0": {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    "1": {
      "type": "composer",
      "url": "https://connect.advancedcustomfields.com"
    },
    "2": {
      "type": "composer",
      "url": "https://composer.deliciousbrains.com"
    }
  },
  "extra": {
    "installer-paths": {
      "wp-content/plugins/{$name}/": [
        "wpackagist-plugin/*",
        "type:wordpress-plugin"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "MozillaLabs\\": "wp-content/themes/mozilla-new-products/src"
    }
  },
  "require": {
    "scrivo/highlight.php": "^9.18",
    "wpackagist-plugin/wp-environment-indicator": "^1.0",
    "vlucas/phpdotenv": "^5.4",
    "timber/timber": "^2.2",
    "wpengine/advanced-custom-fields-pro": "^6.2",
    "deliciousbrains-plugin/wp-migrate-db-pro": "^2.7",
    "yoast/wordpress-seo-premium": "^23.9"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "friendsofphp/php-cs-fixer": "^3.3",
    "symfony/var-dumper": "^4.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "wp-coding-standards/wpcs": "^3.1",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/acf-pro-stubs": "^5.10",
    "php-stubs/wordpress-stubs": "^6.6"
  },
  "scripts": {
    "static-tests": [
      "find wp-content/themes/mozilla-new-products -name '*.php' -exec php -l {} \\;",
      "phpcs --runtime-set ignore_warnings_on_exit true --standard=../phpcs.xml.dist --colors --ignore=node_modules,vendor --error-severity=1 --warning-severity=8 wp-content/themes/mozilla-new-products",
      "phpstan analyse -c ../phpstan.neon.dist -l 5 --memory-limit=2G"
    ],
    "fix": [
      "phpcbf --standard=../phpcs.xml.dist --colors --ignore=node_modules wp-content/themes/mozilla-new-products"
    ]
  }
}
