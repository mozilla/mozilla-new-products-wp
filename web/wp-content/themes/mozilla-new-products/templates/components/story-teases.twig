<ul class="flex flex-col gap-y-20 md:grid md:grid-cols-3 md:gap-x-32 lg:gap-x-48 md:gap-y-32">
  {% for post in posts %}
    {% set product = post.product %}

    <li class="flex flex-col gap-y-4 group relative">
      {% if post.thumbnail %}
        {% include "components/image-icon-watermark.twig" with {
          image: post.thumbnail,
          icon: product and product.icons.grayscale ? get_image(product.icons.grayscale) : null
        } %}
      {% endif %}

      <div class="flex flex-col gap-y-0">
        {% if post.category %}
          <p class="text-secondary/60 block type-headline-14 group-hocus-within:text-content">{{ post.category }}</p>
        {% endif %}

        <h3 class="type-headline-14 leading-tight">
          <a class="before:absolute before:inset-0" href="{{ post.link }}">
            {{ post.title }}
          </a>
        </h3>
      </div>
    </li>
  {% endfor %}
</ul>
