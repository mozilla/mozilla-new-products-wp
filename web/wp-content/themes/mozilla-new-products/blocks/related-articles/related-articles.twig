{% if related_articles is not empty %}
<section data-block="related-articles" class="py-3 {{ alignclass }}">
  {% if related_articles_header %}
    <div class="col-span-full border-content">
      <h2 class="text-center text-xs font-bold leading-3">{{ related_articles_header }}</h2>
    </div>
  {% endif %}

  {% if related_articles %}
    <ul class="grid has-[li:nth-child(2)]:grid-cols-[1fr_1fr] auto-rows-auto gap-x-grid-site-gutter gap-y-10 pt-10">
      {% for post in related_articles %}
        <li class="relative group grid grid-rows-subgrid row-span-2 gap-y-4">
          <div class="w-full grid-rows-1 mt-auto {{ post.thumbnail.id ? '' : 'bg-gray' }}">
            {% if post.thumbnail.id %}
              {% include "components/lazy-img.twig" with { img: get_image(post.thumbnail), class: 'max-w-full max-h-full m-auto' } %}
            {% endif %}
          </div>

          <div class="flex flex-col gap-y-0 max-w-[154px] md:max-w-[214px]">
            {% if post.category %}
              <p class="text-secondary/60 block type-headline-14 group-hocus-within:text-content">{{ post.category }}</p>
            {% endif %}

            <h3 class="type-headline-14 leading-tight">
              <a class="before:absolute before:inset-0 group-hocus-within:underline" href="{{ post.link }}">
                {{ post.title }}
              </a>
            </h3>
          </div>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</section>
{% endif %}
