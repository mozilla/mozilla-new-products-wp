{% extends "layouts/base.twig" %}

{% block pageBody %}

{% include "components/filter-topper.twig" with { title: page.title, description: page.description } %}

  {# <header class="flex gap-2">
    <h1>
      {{ page.title }}/
    </h1>

    {% if page.description %}
    <p>{{ page.description }}</p>
    {% endif %}
  </header> #}

  <section aria-label="Posts" class="mb-36">
    <h2 class="sr-only">Posts</h2>

    <ul class="bg-blue-green grid px-[--grid-site-margin] grid-cols-3 gap-x-[196px]">
      {% for post in posts %}
        <li>
          {% if post.thumbnail %}
            {% include "components/lazy-img.twig" with {
              img: get_image(post.thumbnail)
            } %}
          {% endif %}

          {% if post.category %}
            <p>{{ post.category }}</p>
          {% endif %}

          <h3>
            <a href="{{ post.link }}">
              {{ post.title }}
            </a>
          </h3>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endblock %}
