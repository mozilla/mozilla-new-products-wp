{% extends "layouts/base.twig" %}

{% block pageBody %}
  {% include "components/articles/toppers/topper--" ~ (post.topper_type|default('text_only')) ~ ".twig" %}

  <article x-headings>
    <div class="md:pt-12 grid grid-site centered-page justify-center">

      <div class="col-span-full md:hidden border-content max-md:pt-1 max-md:pb-1">
        <div class="text-sm flex gap-6 justify-between items-baseline">
          <p class="text-[rgba(var(--color-secondary),0.6)] font-headline text-xs font-wdth-380 leading-tight font-light text-right tracking-normal">Share</p>
          {% include "components/articles/share-tools.twig" %}
        </div>
      </div>

      <div x-headings:content x-hang-punc class="max-md:pt-20 col-span-full gutenberg article {{ post.has_lede_paragraph ? 'lede' }} grid grid-cols-site gap-x-grid-site-gutter centered-page">
        {{ post.content }}
      </div>

      {# Share Tools #}
      <div class="max-md:hidden md:col-span-4 lg:col-span-3 3xl:col-span-2 md:col-start-end md:sticky md:bottom-4 text-sm md:h-0">
        <div class="max-md:flex max-md:gap-6 max-md:justify-between md:md:-translate-y-full">
          <p class="text-[rgba(var(--color-secondary),0.6)] font-headline text-xs font-wdth-380 leading-tight font-light text-right tracking-normal">Share</p>
          {% include "components/articles/share-tools.twig" %}
        </div>
      </div>
    </div>

    {% include "components/articles/article-footer.twig" %}

    {% include 'components/article-recirculation.twig' with { posts: post.related_articles } %}
  </article>

{% endblock %}
