<div class="grid grid-cols-site gap-x-grid-site-gutter pt-6 centered-page max-md:pt-6 px-0">
  <div class="col-span-full flex flex-col gap-y-1 md:col-span-6 md:col-start-4 md:gap-x-grid-site-gutter md:border-content md:items-center">
    <div class="flex flex-col gap-y-1 md:max-w-[600px] md:w-full md:grid md: grid-cols-6 md:gap-x-grid-site-gutter">
      <p class="flex col-span-2 max-md:justify-between items-baseline md:col-span-3 md:col-start-1 md:flex-col">
        <span class="text-secondary/60 block font-headline text-xs font-wdth-380 font-light tracking-normal">By</span>
        {% include 'components/articles/byline_format.twig' with { bylines: post.authors } %}
      </p>

      <p class="flex col-span-2 max-md:justify-between items-baseline md:col-span-3 md:flex-col md:gap-y-0">
        <span class="text-secondary/60 block font-headline text-xs font-wdth-380 font-light tracking-normal">Published On</span>
        <time class="max-md:text-right text-sm leading-tight" datetime="{{ post.date|date('c') }}">{{ post.date|date('M d, Y') }}</time>
      </p>
    </div>
  </div>
</div>
