<header class="text-content grid grid-site mt-[20vh]">
  <div class="col-span-full md:col-start-3 md:col-end-11 flex flex-col gap-8 items-center">
    <p class="group type-headline-80 text-center" x-init x-typewriter>
      <span class="text-balance block">{{ static_text }}</span>

      {% for item in rotating_texts %}
        <span x-typewriter:text="{{ item.text }}"></span>
      {% endfor %}

      <span class="inline-block h-14 w-2 translate-y-0.5 bg-spot group-aria-busy:animate-none animate-blink"></span>
    </p>

    {% if description %}
      <div class="type-headline-20 text-center text-balance max-w-3xl">{{ description }}</div>
    {% endif %}

    {% if cta %}
      <a class="w-fit button button-lg" href="{{ cta.url }}">
        {{ cta.title }}
      </a>
    {% endif %}
  </div>
</header>
