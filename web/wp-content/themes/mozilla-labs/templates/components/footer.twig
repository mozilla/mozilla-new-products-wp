<footer class="text-content mt-12 md:mt-24 pb-grid-site-margin grid grid-site centered-page">
  <div class="col-span-full grid grid-cols-2 gap-grid-site-gutter md:col-span-4 md:flex md:flex-col md:gap-4">
    <h2 class="text-sm font-bold">Products</h2>
    <ul class="md:columns-2">
      {% for product in ["Odin", "Deepfake Detector", "Hiro", "Orbit", "Solo", "Formulaic"] %}
      <li class="text-sm w-fit">
        <a class="hocus:underline" href="#">
          {{ product }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>

  <div class="col-span-full flex flex-col md:col-start-9 md:col-span-4 md:grid md:grid-cols-2 gap-grid-site-gutter">
    {% for section in options.footer_links_section %}
    <div class="grid grid-cols-2 gap-grid-site-gutter md:flex md:flex-col md:gap-4">
      <h2 class="text-sm font-bold">{{ section.footer_links_section_heading }}</h2>
      <ul>
        {% for item in section.footer_links_items %}
          <li class="text-sm">
            <a class="hocus:underline" href="{{ item.footer_links_item_link.url }}">
              {{ item.footer_links_item_link.name ?: item.footer_links_item_link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
    {% endfor %}
  </div>

  <div class="col-span-full grid grid-cols-2 gap-grid-site-gutter md:flex md:items-start md:justify-between md:gap-6 bg-blue-green">
    <p class="max-md:w-1/2 font-bold text-xs whitespace-nowrap"><a href="https://mozilla.org/">Mozilla</a> &copy; {{ now|date('Y') }}</p>

    <ul class="flex flex-wrap max-md:flex-col md:items-center justify-end md:gap-x-6 gap-y-1.5">
      {% for item in primary_footer_menu.items %}
        <li class="leading-none text-sm">
          <a href="{{ item.url }}" class="hocus:underline">{{ item.name }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

  {# Mozilla Logo #}
  <svg class="md:row-start-2 col-span-full aspect-mozilla-logo mt-16" aria-hidden="true">
    <use xlink:href="#mozillalogo"></use>
  </svg>
</footer>
