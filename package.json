{
  "name": "@upstatement/mozilla-labs",
  "version": "0.2.0",
  "description": "Theme for Mozilla Labs",
  "author": "Upstatement",
  "repository": "",
  "license": "ISC",
  "testing": {
    "urls": {
      "local": "http://mozilla-labs.ups.dock",
      "staging": "",
      "production": ""
    },
    "accessibility": {
      "compliance": "Section508",
      "paths": [
        "/"
      ],
      "ignore": {
        "codes": [
          "notice"
        ],
        "selectors": [
          "#wpadminbar"
        ]
      }
    }
  },
  "bundlesize": [
    {
      "path": "web/wp-content/themes/mozilla-labs/dist/assets/app-*.js",
      "maxSize": "50 kB"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "workspaces": [
    "web/wp-content/themes/*"
  ],
  "packageManager": "npm@9.8.1",
  "scripts": {
    "setup": "./bin/setup",
    "start": "./bin/start",
    "export-db": "./bin/export-db",
    "dev": "turbo run dev:theme dev:blocks",
    "build": "turbo run build:theme build:blocks",
    "lint:js": "turbo run lint:js",
    "fix:js": "turbo run lint:js -- --fix",
    "lint:php": "composer --working-dir=web static-tests",
    "fix:php": "composer --working-dir=web fix",
    "test:bundlesize": "bundlesize",
    "test:a11y": "node tests/pa11y.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "phplogs": "./bin/logs"
  },
  "lint-staged": {
    "*.{js,scss,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "turbo run lint:js -- --fix"
    ]
  },
  "devDependencies": {
    "@upstatement/eslint-config": "^3.0.0",
    "@upstatement/prettier-config": "^1.1.0",
    "bundlesize": "^0.18.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "lodash.get": "^4.4.2",
    "pa11y": "^6.2.3",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3"
  },
  "dependencies": {
    "node-gyp": "^11.1.0"
  }
}
